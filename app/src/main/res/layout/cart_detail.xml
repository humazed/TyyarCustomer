            android:paddingRight="16.0dip"/>

        <TextView
            android:id="@+id/service_fee_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="4.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="4.0dip"
            android:text="0.00"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/extra_order_fee_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/extra_order_fee_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="4.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="4.0dip"
            android:text="@string/small_order_fee"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>

        <ImageView
            android:id="@+id/extra_order_fee_icon"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/extra_order_fee_label"
            android:background="@drawable/info_outline"
            android:paddingRight="16.0dip"/>

        <TextView
            android:id="@+id/extra_order_fee_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="4.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="4.0dip"
            android:text="0.00"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tip_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tip_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="4.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="4.0dip"
            android:text="@string/dasher_tip"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>

        <TextView
            android:id="@+id/tip_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="4.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="4.0dip"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/total_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="4.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="4.0dip"
            android:text="@string/total"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>

        <TextView
            android:id="@+id/total_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="4.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="4.0dip"
            android:text="$ 55.00"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>
    </RelativeLayout>
</LinearLayout>