<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="56.0dip"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="16.0dip"
    android:paddingTop="8.0dip">

    <RelativeLayout
        android:id="@+id/subtotal_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/subtotal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="4.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="4.0dip"
            android:text="@string/subtotal"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>

        <TextView
            android:id="@+id/subtotal_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="4.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="4.0dip"
            android:text="$ 60.00"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/taxes_and_fees_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/taxes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="4.0dip"
            android:paddingTop="4.0dip"
            android:text="@string/tax"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>

        <TextView
            android:id="@+id/taxes_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="4.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="4.0dip"
            android:text="$ 5.00"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/delivery_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/delivery_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="4.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="4.0dip"
            android:text="@string/delivery"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>

        <TextView
            android:id="@+id/delivery_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="4.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="4.0dip"
            android:text="$ 10.00"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>

        <TextView
            android:id="@+id/delivery_original_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/delivery_cost"
            android:paddingBottom="4.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="4.0dip"
            android:paddingTop="4.0dip"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/discount_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/discount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="4.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="4.0dip"
            android:text="@string/discount"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>

        <TextView
            android:id="@+id/discount_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="4.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="4.0dip"
            android:text="$5.00"
            android:textColor="@color/DD_GREEN"
            android:textSize="16.0sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/service_fee_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/service_fee_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="4.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="4.0dip"
            android:text="@string/selection_fee"
            android:textColor="@color/black"
            android:textSize="16.0sp"/>

        <ImageView
            android:id="@+id/service_fee_icon"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/service_fee_label"
