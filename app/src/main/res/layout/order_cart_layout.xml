<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragmentRecyclerView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/action_button"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:scrollbars="vertical"/>

        <RelativeLayout
            android:id="@+id/action_button"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dd_button_red_flat"
            android:clickable="true">

            <TextView
                android:id="@+id/actionButtonTitleTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16.0dip"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/actionButtonSubtitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16.0dip"/>
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="fill_parent"
        android:layout_height="350.0dip"
        android:background="@android:color/holo_orange_light"
        android:clipToPadding="true"
        android:visibility="gone"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="16.0dip"
                android:text="hello"
                android:textSize="16.0sp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="16.0dip"
                android:text="hello"
                android:textSize="16.0sp"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>