<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="48.0dip"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/light_gray"/>

    <TextView
        android:id="@+id/item_option_label"
        style="@style/AppBaseTheme.RobotoMedium.MediumSize.Title"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginTop="8.0dip"
        android:gravity="start|center"
        android:paddingLeft="16.0dip"
        android:text="@string/options"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/light_gray"/>

    <EditText
        android:id="@+id/dasher_instructions_edit_text"
        style="@style/AppBaseTheme.RobotoRegular.SmallSize"
        android:layout_width="fill_parent"
        android:layout_height="72.0dip"
        android:background="@color/white"
        android:gravity="top"
        android:hint="@string/special_instructions_prompt"
        android:lines="5"
        android:padding="16.0dip"
        android:textColorHint="@color/light_gray"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="16.0dip"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:id="@+id/substitution_container"
        style="@style/SelectableItemBackground"
        android:layout_width="fill_parent"
        android:layout_height="72.0dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16.0dip">

        <TextView
            android:id="@+id/substitution_title"
            style="@style/AppBaseTheme.RobotoMedium.MediumSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/if_item_sold_out"/>

        <Spinner
            android:id="@+id/subsitution_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/substitution_title"
            android:background="@color/white"
            android:spinnerMode="dropdown"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="16.0dip"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="16.0dip"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:paddingTop="16.0dip">

        <TextView
            android:id="@+id/item_quantity_text_view"
            style="@style/AppBaseTheme.RobotoRegular.MediumSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/item_quantity_plus_button"
            android:layout_width="22.0dip"
            android:layout_height="22.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_add"
            android:padding="24.0dip"/>

        <Button
            android:id="@+id/item_quantity_minus_button"
            android:layout_width="22.0dip"
            android:layout_height="22.0dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:layout_toLeftOf="@id/item_quantity_plus_button"
            android:background="@drawable/ic_remove"
            android:padding="24.0dip"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="16.0dip"
        android:background="@color/light_gray"/>
</LinearLayout>