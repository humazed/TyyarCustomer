<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MSV_ImageButton">
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:paddingLeft">@dimen/search_icon_padding</item>
        <item name="android:paddingRight">@dimen/search_icon_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>


    <style name="SelectableItemTheme">
        <item name="android:colorControlHighlight">@color/light_gray</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:colorControlHighlight">@color/light_gray</item>
        <item name="android:selectableItemBackgroundBorderless">?android:selectableItemBackground
        </item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="colorControlActivated">@color/white</item>
    </style>


    <style name="AppBaseTheme.RobotoBold.XSmallSize.Caps" parent="@style/AppBaseTheme.RobotoBold.XSmallSize">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="DoorDashTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/DD_DARK_RED</item>
        <item name="colorAccent">@color/red</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="colorControlHighlight">@color/red</item>
        <item name="alertDialogTheme">@style/DDDialogAlert</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>
</resources>
